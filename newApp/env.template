# === Mode Selection ===
# Voice Agent mode uses Deepgram's real-time streaming API (recommended)
# Set to false to use the old batch STT/LLM/TTS pipeline
VOICE_AGENT_MODE=true

# === Deepgram Voice Agent (VOICE_AGENT_MODE=true) ===
DEEPGRAM_API_KEY=your_deepgram_api_key_here
# DEEPGRAM_STT_MODEL=nova-3
# DEEPGRAM_TTS_MODEL=aura-2-thalia-en
# DEEPGRAM_TTS_SAMPLE_RATE=16000
# DEEPGRAM_LLM_PROVIDER=open_ai
# DEEPGRAM_LLM_MODEL=gpt-4o-mini

# === OpenAI (required if DEEPGRAM_LLM_PROVIDER=open_ai) ===
OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_LLM_MODEL=gpt-4o-mini
# OPENAI_TTS_VOICE=nova

# === Legacy Mode Settings (VOICE_AGENT_MODE=false) ===
# STT_PROVIDER=openai
# LLM_PROVIDER=openai
# TTS_PROVIDER=openai

# === Google Gemini (legacy mode only) ===
# GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL=gemini-2.0-flash

# === Companion Personality ===
# COMPANION_NAME=Piglet
# SYSTEM_PROMPT=

# === Audio ===
# SOUND_CARD_NAME=wm8960soundcard
# INITIAL_VOLUME_LEVEL=114

# === Misc ===
# CHAT_HISTORY_RESET_TIME=300
# CUSTOM_FONT_PATH=/path/to/font.ttf
# MUSIC_DIR=/path/to/music
